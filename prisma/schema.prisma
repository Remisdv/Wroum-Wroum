generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  titre        String
  contenu      String
  date         DateTime @default(now())
  userId       String   @db.ObjectId
  user         User     @relation(fields: [userId], references: [id])

  likes        Json
  vues         Json
  commentaires Json
  signalements Json

  signalementsRelation Signalement[] @relation("PostSignalements")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  nom         String
  mdp         String
  email       String @unique
  posts       Post[]

  abonnements Json
  abonn√©s     Json
}

model Signalement {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  type          String
  postId        String?  @db.ObjectId
  commentaireId String?
  userId        String   @db.ObjectId
  raison        String
  date          DateTime @default(now())

  post          Post?    @relation("PostSignalements", fields: [postId], references: [id])
  commentaire   Json?
}