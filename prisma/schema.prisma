generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  titre        String
  contenu      String
  date         DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id])

  likes        Json     // [{ userId, date }]
  vues         Json     // [{ userId, date }]
  commentaires Json     // [{ userId, contenu, date, signalements: [{ userId, raison, date }] }]
  signalements Json     // [{ userId, raison, date }]
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  nom            String
  mdp            String
  email          String @unique
  posts          Post[]

  abonnements    Json   // [{ userId, date }]
  abonn√©s        Json   // [{ userId, date }]
}