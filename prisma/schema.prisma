generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  titre        String
  contenu      String
  date         DateTime @default(now())
  userId       String   @db.ObjectId
  user         User     @relation(fields: [userId], references: [id])
  likes        Json
  vues         Json
  commentaires Json
  signalements Json
  signalementsRelation Signalement[] @relation("PostSignalements")
}
model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  nom         String
  mdp         String
  bio         String
  email       String @unique
  role        String @default("user")
  posts       Post[]
  abonnements Json
  abonnés     Json
  photoProfil String? // URL de la photo de profil
  banniere    String? // URL de la bannière
}

model Signalement {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  type         String
  postId       String?  @db.ObjectId
  commentaireId Int?   
  userId       String   @db.ObjectId
  titre        String
  contenu      String
  date         DateTime @default(now())
  status       String   @default("en_attente")
 
  post         Post?    @relation("PostSignalements", fields: [postId], references: [id])
}