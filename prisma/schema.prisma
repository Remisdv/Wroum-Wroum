generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Commentaire {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  contenu   String
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Post {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  contenu    String
  date       DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  signalements Signaler[] // Ajout de la relation inverse
  likes      Like[]   // Ajout de la relation inverse
}

model Signaler {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  raison    String
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  nom           String
  mdp           String
  email         String   @unique
  posts         Post[]
  commentaires  Commentaire[]
  signalements  Signaler[]
  likes         Like[]   // Ajout de la relation inverse
}

model Like {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  date      DateTime @default(now())
}
