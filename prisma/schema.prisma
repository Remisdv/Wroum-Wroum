generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  titre        String
  contenu      String
  date         DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id])

  likes        Json     // [{ userId, date }]
  vues         Json     // [{ userId, date }]
  commentaires Json     // [{ commentaireId, userId, contenu, date, signalements: [{userId, raison, date }] }]
  signalements Json     // [{ userId, raison, date }]
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  nom            String
  mdp            String
  email          String @unique
  posts          Post[]

  abonnements    Json   // [{ userId, date }]
  abonnés        Json   // [{ userId, date }]
}

model Signalement {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  type          String   // "post" ou "commentaire"
  postId        String?  @db.ObjectId
  commentaireId String?  @db.ObjectId
  userId        String   @db.ObjectId // Celui qui a signalé
  raison        String
  date          DateTime @default(now())

  post          Post?    @relation(fields: [postId], references: [id])
  commentaire   Json?    // Stocker le contenu du commentaire au moment du signalement
}